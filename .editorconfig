# EditorConfig is awesome: http://EditorConfig.org

# Top most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

# 4 space indentation
[*.{css,js,json,sh}]
indent_size = 4

# 2 space indentation
[*.{ejs,html}]
indent_size = 2
